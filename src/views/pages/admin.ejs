<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin</title>
  <style>
    /* Styling for the body */
    body {
      background-color: #FFF1E4; /* Set background color to a light shade */
      font-family: 'Poppins', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      flex-direction: column;
    }

    .admin-container {
      background-color: #FFFFFF;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      text-align: center;
      max-width: 700px;
      width: 100%;
      margin-top: 20px;
    }

    h1 {
      color: #2E2640;
      font-size: 2.5rem;
      margin-bottom: 20px;
    }

    .form-group {
      margin-bottom: 20px;
      text-align: left;
    }

    label {
      display: block;
      margin-bottom: 5px;
      color: #2E2640;
    }

    select, input[type="text"] {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    button {
      background-color: #2E2640;
      color: #FFF;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1rem;
    }

    button:hover {
      background-color: #1d1a2c;
    }
  </style>
</head>

<body>
  <div class="admin-container">
    <h1>Admin</h1>
    
    <!-- Form to assign user to team -->
    <form action="/admin/assign-user" method="POST">
      <div class="form-group">
        <label for="userId">Select User:</label>
        <select name="userId" id="userId" required>
          <% usersWithoutTeam.forEach(user => { %>
            <option value="<%= user.id %>"><%= user.firstname %> <%= user.lastname %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="teamId">Select Team:</label>
        <select name="teamId" id="teamId" required>
          <% teams.forEach(team => { %>
            <option value="<%= team.id %>">Team <%= team.id %> (Color: <%= team.color %>)</option>
          <% }) %>
        </select>
      </div>
      <button type="submit">Assign User to Team</button>
    </form>
    
    <hr>

    <!-- Form to create new team -->
    <form action="/admin/create-team" method="POST">
      <div class="form-group">
        <label for="color">Team Color:</label>
        <select name="color" id="color" required>
          <option value="Green">Green</option>
          <option value="Red">Red</option>
          <option value="Blue">Blue</option>
          <option value="Orange">Orange</option>
          <option value="Grey">Grey</option>
          <option value="Ocher">Ocher</option>
          <option value="Pink">Pink</option>
          <option value="Navy">Navy</option>
          <option value="Yellow">Yellow</option>
          <option value="Olive">Olive</option>
        </select>
      </div>
      <div class="form-group">
        <label for="universe">Universe:</label>
        <select name="universe" id="universe" required>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
      </div>
      <button type="submit">Create Team</button>
    </form>
  </div>
</body>

</html>
